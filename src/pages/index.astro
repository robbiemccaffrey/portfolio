---
import Layout from '../layouts/Layout.astro';
import BlogCard from '../components/BlogCard.astro';
import ProjectCard from '../components/ProjectCard.astro';
import NewsletterSignup from '../components/NewsletterSignup.astro';
import { getCollection } from 'astro:content';
import photosRaw from '../data/photos.json';
import musicRaw from '../data/music.json';

type Photo = { filename: string; title: string; location?: string; date?: string; camera?: string };
type Track = { title: string; description: string; embedUrl: string; linkUrl: string };

const photos = photosRaw as Photo[];
const music  = musicRaw  as Track[];

const allPosts = await getCollection('blog', ({ data }) => !data.draft);
const latestPosts = allPosts
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, 3);

const allProjects = await getCollection('projects');
const featuredProjects = allProjects
  .filter((p) => p.data.featured)
  .sort((a, b) => a.data.order - b.data.order)
  .slice(0, 3);

const previewPhotos = photos.slice(0, 6);
const previewMusic  = music.slice(0, 3);
---

<Layout
  title="Robert McCaffrey — Head of Engineering, Dublin"
  description="Engineering leader building scalable products and high-performance teams. Head of Engineering at TaxZap, Dublin."
>

  <!-- ── Hero ──────────────────────────────────────────────── -->
  <section class="relative overflow-hidden">
    <!-- Subtle background gradient -->
    <div class="absolute inset-0 bg-gradient-to-br from-blue-50/60 via-white to-white dark:from-blue-950/20 dark:via-gray-950 dark:to-gray-950 pointer-events-none" aria-hidden="true"></div>
    <!-- Faint grid texture -->
    <div class="absolute inset-0 opacity-[0.03] dark:opacity-[0.06] pointer-events-none" style="background-image: radial-gradient(circle, #6366f1 1px, transparent 1px); background-size: 32px 32px;" aria-hidden="true"></div>

    <div class="relative max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-24 md:py-32">
      <div class="flex flex-col md:flex-row items-center gap-12 md:gap-20">

        <!-- Copy -->
        <div class="flex-1 text-center md:text-left order-2 md:order-1">

          <!-- Location pill -->
          <div class="inline-flex items-center gap-2 text-xs text-blue-600 dark:text-blue-400 font-semibold bg-blue-50 dark:bg-blue-950/60 px-3 py-1.5 rounded-full mb-6 border border-blue-100 dark:border-blue-800 uppercase tracking-wider">
            <span class="w-1.5 h-1.5 bg-green-500 rounded-full animate-pulse"></span>
            Dublin, Ireland
          </div>

          <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold text-gray-900 dark:text-white leading-[1.05] tracking-tight">
            Robert<br />McCaffrey
          </h1>

          <p class="mt-4 text-lg md:text-xl font-semibold text-blue-600 dark:text-blue-400 tracking-wide">
            Head of Engineering
          </p>

          <!-- Divider -->
          <div class="mt-5 mb-5 w-12 h-0.5 bg-blue-500 rounded-full md:mx-0 mx-auto"></div>

          <p class="text-base md:text-lg text-gray-600 dark:text-gray-400 max-w-lg leading-relaxed">
            8+ years scaling fintech in regulated environments. Leading engineering, security, and AI at <a href="https://taxzap.com" target="_blank" rel="noopener noreferrer" class="text-gray-900 dark:text-white font-semibold hover:text-blue-600 dark:hover:text-blue-400 transition-colors">TaxZap</a> — €2.6M seed, ISO 27001, LLM agents, 125k+ users. Formerly <a href="https://xelda.com" target="_blank" rel="noopener noreferrer" class="font-semibold text-gray-900 dark:text-white hover:text-blue-600 dark:hover:text-blue-400 transition-colors">Xelda</a> (Sequoia Arc) and <a href="https://inscribe.ai" target="_blank" rel="noopener noreferrer" class="font-semibold text-gray-900 dark:text-white hover:text-blue-600 dark:hover:text-blue-400 transition-colors">Inscribe</a> (YC).
          </p>

          <!-- CTA buttons -->
          <div class="mt-8 flex flex-wrap gap-3 justify-center md:justify-start">
            <a href="/projects" class="inline-flex items-center gap-2 px-5 py-2.5 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-xl transition-colors shadow-md shadow-blue-500/20 text-sm">
              View Projects
            </a>
            <a href="/cv" class="inline-flex items-center gap-2 px-5 py-2.5 bg-white dark:bg-gray-800/80 hover:bg-gray-50 dark:hover:bg-gray-700 text-gray-900 dark:text-white font-semibold rounded-xl border border-gray-200 dark:border-gray-700 transition-colors text-sm backdrop-blur-sm">
              View CV
            </a>
            <a href="https://linkedin.com/in/robbiemc8" target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 px-5 py-2.5 bg-white dark:bg-gray-800/80 hover:bg-gray-50 dark:hover:bg-gray-700 text-gray-900 dark:text-white font-semibold rounded-xl border border-gray-200 dark:border-gray-700 transition-colors text-sm backdrop-blur-sm">
              <svg class="w-4 h-4 text-[#0077b5]" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
              LinkedIn
            </a>
            <a href="https://github.com/rmccaffr" target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 px-5 py-2.5 bg-white dark:bg-gray-800/80 hover:bg-gray-50 dark:hover:bg-gray-700 text-gray-900 dark:text-white font-semibold rounded-xl border border-gray-200 dark:border-gray-700 transition-colors text-sm backdrop-blur-sm">
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"/>
              </svg>
              GitHub
            </a>
          </div>

          <!-- Quick stats -->
          <div class="mt-10 flex flex-wrap gap-6 justify-center md:justify-start">
            {[
              { value: '8+',    label: 'Years experience' },
              { value: '125k+', label: 'Platform users' },
              { value: '$40M+', label: 'Raised across portfolio' },
            ].map(({ value, label }) => (
              <div class="text-center md:text-left">
                <p class="text-2xl font-bold text-gray-900 dark:text-white">{value}</p>
                <p class="text-xs text-gray-500 dark:text-gray-400 mt-0.5">{label}</p>
              </div>
            ))}
          </div>

        </div>

        <!-- Avatar -->
        <div class="flex-shrink-0 order-1 md:order-2">
          <div class="relative">
            <!-- Glow ring -->
            <div class="absolute -inset-3 rounded-full bg-gradient-to-br from-blue-400/30 to-indigo-400/20 dark:from-blue-600/20 dark:to-indigo-600/10 blur-xl" aria-hidden="true"></div>
            <div class="relative w-48 h-48 md:w-64 md:h-64 rounded-full overflow-hidden ring-4 ring-white dark:ring-gray-800 shadow-2xl">
              <img
                src="/profile.jpg"
                alt="Robert McCaffrey"
                width="256"
                height="256"
                class="w-full h-full object-cover"
                onerror="this.src='data:image/svg+xml,%3Csvg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 256 256%22%3E%3Crect width=%22256%22 height=%22256%22 fill=%22%23e2e8f0%22/%3E%3Ccircle cx=%22128%22 cy=%22100%22 r=%2248%22 fill=%22%2394a3b8%22/%3E%3Cellipse cx=%22128%22 cy=%22220%22 rx=%2280%22 ry=%2260%22 fill=%22%2394a3b8%22/%3E%3C/svg%3E'"
              />
            </div>
            <!-- Online indicator -->
            <span class="absolute bottom-3 right-3 flex items-center justify-center w-8 h-8 bg-white dark:bg-gray-800 rounded-full shadow-lg ring-2 ring-white dark:ring-gray-800" title="Open to opportunities">
              <span class="w-3.5 h-3.5 bg-green-500 rounded-full"></span>
            </span>
          </div>
        </div>

      </div>
    </div>
  </section>

  <!-- ── Featured Projects ──────────────────────────────────── -->
  {featuredProjects.length > 0 && (
    <section class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-16 border-t border-gray-100 dark:border-gray-800/60">
      <div class="flex items-center justify-between mb-8">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white">Featured Projects</h2>
        <a href="/projects" class="text-sm font-medium text-blue-600 dark:text-blue-400 hover:underline">
          All projects →
        </a>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {featuredProjects.map((project) => (
          <ProjectCard
            title={project.data.title}
            description={project.data.description}
            tech={project.data.tech}
            githubUrl={project.data.githubUrl}
            liveUrl={project.data.liveUrl}
            featured={project.data.featured}
          />
        ))}
      </div>
    </section>
  )}

  <!-- ── Latest Blog Posts ──────────────────────────────────── -->
  {latestPosts.length > 0 && (
    <section class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-16 border-t border-gray-100 dark:border-gray-800/60">
      <div class="flex items-center justify-between mb-8">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white">Latest Posts</h2>
        <a href="/blog" class="text-sm font-medium text-blue-600 dark:text-blue-400 hover:underline">
          All posts →
        </a>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {latestPosts.map((post) => <BlogCard post={post} />)}
      </div>

      <div class="mt-10">
        <NewsletterSignup
          title="Get each post in your inbox"
          subtitle="Join the list and I will email you when I publish a new article."
          compact={true}
        />
      </div>
    </section>
  )}

  <!-- ── Photography Preview ─────────────────────────────────── -->
  {previewPhotos.length > 0 && (
    <section class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-16 border-t border-gray-100 dark:border-gray-800/60">
      <div class="flex items-center justify-between mb-8">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white">Photography</h2>
        <a href="/photography" class="text-sm font-medium text-blue-600 dark:text-blue-400 hover:underline">
          View all →
        </a>
      </div>
      <div class="grid grid-cols-2 md:grid-cols-3 gap-3">
        {previewPhotos.map((photo) => (
          <a
            href="/photography"
            class="group aspect-square overflow-hidden rounded-xl bg-gray-100 dark:bg-gray-800 block"
            aria-label={`Photo: ${photo.title}`}
          >
            <img
              src={`/photos/${photo.filename}`}
              alt={photo.title}
              class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
              loading="lazy"
            />
          </a>
        ))}
      </div>
    </section>
  )}

  <!-- ── Music Preview ──────────────────────────────────────── -->
  {previewMusic.length > 0 && (
    <section class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-16 border-t border-gray-100 dark:border-gray-800/60">
      <div class="flex items-center justify-between mb-8">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white">Music</h2>
        <a href="/music" class="text-sm font-medium text-blue-600 dark:text-blue-400 hover:underline">
          View all →
        </a>
      </div>
      <div class="flex flex-col gap-4 max-w-lg">
        {previewMusic.map((track) => (
          track.platform === 'tiktok' ? (
            <a
              href={track.linkUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="group flex items-center gap-5 rounded-2xl border border-gray-200 dark:border-gray-800 bg-white dark:bg-gray-900 p-5 shadow-sm hover:shadow-md hover:border-gray-300 dark:hover:border-gray-700 transition-all"
            >
              <div class="flex-shrink-0 w-12 h-12 rounded-xl bg-black flex items-center justify-center shadow">
                <svg class="w-7 h-7" viewBox="0 0 24 24" fill="white" aria-hidden="true">
                  <path d="M19.59 6.69a4.83 4.83 0 0 1-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 0 1-2.88 2.5 2.89 2.89 0 0 1-2.89-2.89 2.89 2.89 0 0 1 2.89-2.89c.28 0 .54.04.79.1V9.01a6.33 6.33 0 0 0-.79-.05 6.34 6.34 0 0 0-6.34 6.34 6.34 6.34 0 0 0 6.34 6.34 6.34 6.34 0 0 0 6.33-6.34V8.69a8.18 8.18 0 0 0 4.79 1.54V6.78a4.85 4.85 0 0 1-1.02-.09z"/>
                </svg>
              </div>
              <div class="flex-1 min-w-0">
                <p class="text-xs font-semibold uppercase tracking-widest text-gray-400 dark:text-gray-500">TikTok</p>
                <p class="font-bold text-gray-900 dark:text-white group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">@{track.title}</p>
                <p class="text-xs text-gray-500 dark:text-gray-400 mt-0.5">{track.description}</p>
              </div>
              <svg class="w-4 h-4 text-gray-400 group-hover:text-blue-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </a>
          ) : track.embedUrl ? (
            <div class="rounded-2xl border border-gray-200 dark:border-gray-800 bg-white dark:bg-gray-900 p-5 shadow-sm">
              <h3 class="font-semibold text-gray-900 dark:text-white text-sm mb-1">{track.title}</h3>
              <p class="text-xs text-gray-500 dark:text-gray-400 mb-3">{track.description}</p>
              <iframe src={track.embedUrl} class="w-full rounded-lg" height="80" frameborder="0" allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture" loading="lazy" title={track.title} />
            </div>
          ) : (
            <a href={track.linkUrl} target="_blank" rel="noopener noreferrer"
              class="text-sm text-blue-600 dark:text-blue-400 hover:underline font-medium">
              {track.title} →
            </a>
          )
        ))}
      </div>
    </section>
  )}

</Layout>
