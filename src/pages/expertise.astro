---
import Layout from '../layouts/Layout.astro';

const domainCards = [
  {
    title: 'Open Banking & Payments',
    description: 'Deep experience with PSD2/SCA compliance, payment initiation, direct debits, card issuing, invoicing, and reconciliation across regulated fintech environments.',
    pills: ['PSD2/SCA', 'FCA', 'HMRC', 'BaaS', 'Card Issuing', 'Direct Debits', 'Reconciliation', 'Stripe', 'Yapily', 'Plaid'],
    icon: `<svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M2.25 8.25h19.5M2.25 9h19.5m-16.5 5.25h6m-6 2.25h3m-3.75 3h15a2.25 2.25 0 002.25-2.25V6.75A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25v10.5A2.25 2.25 0 004.5 19.5z" /></svg>`,
  },
  {
    title: 'AI & ML Pipelines',
    description: 'Designed and deployed LLM-based agents, OCR pipelines, document fraud detection, and pattern analysis systems serving 125k+ users in production.',
    pills: ['LLM Agents', 'OCR', 'Fraud Detection', 'Pattern Analysis', 'Computer Vision', 'Prompt Engineering'],
    icon: `<svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.813 15.904L9 18.75l-.813-2.846a4.5 4.5 0 00-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 003.09-3.09L9 5.25l.813 2.846a4.5 4.5 0 003.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 00-3.09 3.09zM18.259 8.715L18 9.75l-.259-1.035a3.375 3.375 0 00-2.455-2.456L14.25 6l1.036-.259a3.375 3.375 0 002.455-2.456L18 2.25l.259 1.035a3.375 3.375 0 002.455 2.456L21.75 6l-1.036.259a3.375 3.375 0 00-2.455 2.456z" /></svg>`,
  },
  {
    title: 'Cloud Infrastructure & DevOps',
    description: 'Architected AWS infrastructure with Terraform IaC, implemented CI/CD pipelines, containerised deployments, and production observability across multiple startups.',
    pills: ['AWS', 'Terraform', 'IaC', 'CI/CD', 'Docker', 'VPC', 'IAM', 'CloudWatch'],
    icon: `<svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M2.25 15a4.5 4.5 0 004.5 4.5H18a3.75 3.75 0 001.332-7.257 3 3 0 00-3.758-3.848 5.25 5.25 0 00-10.233 2.33A4.502 4.502 0 002.25 15z" /></svg>`,
  },
  {
    title: 'Security & Compliance',
    description: 'Led ISO 27001 certification from the ground up, managing policies, vendor risk, training, and ongoing compliance across HMRC and FCA-regulated systems.',
    pills: ['ISO 27001', 'Vanta', 'FCA Regulated', 'HMRC Regulated', 'DevSecOps', 'Secrets Management', 'Encryption'],
    icon: `<svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285z" /></svg>`,
  },
  {
    title: 'Startup Leadership',
    description: 'Three-time founding/early engineer at YC and Sequoia Arc-backed companies. Scaled engineering teams from 1 to 15+, led hiring, and supported $40M+ in fundraising.',
    pills: ['Founding Engineer x3', 'YC', 'Sequoia Arc', 'Team Scaling (15+)', 'Hiring', '$40M+ Raised'],
    icon: `<svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15.59 14.37a6 6 0 01-5.84 7.38v-4.8m5.84-2.58a14.98 14.98 0 006.16-12.12A14.98 14.98 0 009.631 8.41m5.96 5.96a14.926 14.926 0 01-5.841 2.58m-.119-8.54a6 6 0 00-7.381 5.84h4.8m2.581-5.84a14.927 14.927 0 00-2.58 5.84m2.699 2.7c-.103.021-.207.041-.311.06a15.09 15.09 0 01-2.448-2.448 14.9 14.9 0 01.06-.312m-2.24 2.39a4.493 4.493 0 00-1.757 4.306 4.493 4.493 0 004.306-1.758M16.5 9a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0z" /></svg>`,
  },
  {
    title: 'Full-Stack Product Development',
    description: 'End-to-end product engineering across React, Vue, Node.js, Django, and Express with PostgreSQL and MongoDB, using monorepo architectures at scale.',
    pills: ['React', 'Vue', 'Node.js', 'Django', 'Express', 'PostgreSQL', 'MongoDB', 'Monorepos'],
    icon: `<svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.25 6.75L22.5 12l-5.25 5.25m-10.5 0L1.5 12l5.25-5.25m7.5-3l-4.5 16.5" /></svg>`,
  },
];

const techStack = [
  { label: 'Languages',  items: ['TypeScript', 'JavaScript', 'Python', 'Java'] },
  { label: 'Frontend',   items: ['React', 'Vue', 'Astro', 'Tailwind CSS'] },
  { label: 'Backend',    items: ['Node.js', 'Express', 'Django', 'Spring'] },
  { label: 'Databases',  items: ['PostgreSQL', 'MongoDB'] },
  { label: 'Cloud & Infra', items: ['AWS', 'Terraform', 'Docker', 'CI/CD'] },
];

const integrations = ['Yapily', 'Plaid', 'Stripe', 'Revolut', 'Vanta', 'HMRC', 'Accountancy Software', 'Open Banking APIs'];
---

<Layout
  title="Expertise — Robert McCaffrey"
  description="Domain expertise in open banking, payments, AI pipelines, cloud infrastructure, security, and startup engineering leadership."
>
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-16">

    <!-- Section 1 — Header -->
    <div class="mb-14">
      <h1 class="text-3xl sm:text-4xl font-bold text-gray-900 dark:text-white">
        Areas of Expertise
      </h1>
      <p class="mt-3 text-lg text-gray-600 dark:text-gray-400 max-w-2xl">
        Domain knowledge built across fintech startups, regulated environments, and AI-powered products.
      </p>
    </div>

    <!-- Section 2 — Domain Expertise Cards -->
    <section class="mb-16">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-5">
        {domainCards.map(card => (
          <div class="rounded-xl border border-gray-100 dark:border-gray-800 bg-gray-50 dark:bg-gray-900/50 p-5 hover:shadow-lg hover:-translate-y-0.5 transition-all duration-200">
            <div class="text-blue-600 dark:text-blue-400 mb-3" set:html={card.icon} />
            <h3 class="text-base font-bold text-gray-900 dark:text-white mb-2">{card.title}</h3>
            <p class="text-sm text-gray-600 dark:text-gray-400 leading-relaxed mb-3">{card.description}</p>
            <div class="flex flex-wrap gap-1.5">
              {card.pills.map(pill => (
                <span class="text-xs font-medium px-2.5 py-1 rounded-full bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 text-gray-700 dark:text-gray-300">
                  {pill}
                </span>
              ))}
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- Section 3 — Tech Stack -->
    <section class="mb-16">
      <h2 class="text-lg font-bold text-gray-900 dark:text-white border-b border-gray-200 dark:border-gray-700 pb-1.5 mb-5 uppercase tracking-wide text-sm">
        Tech Stack
      </h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-5">
        {techStack.map(({ label, items }) => (
          <div class="rounded-xl border border-gray-100 dark:border-gray-800 bg-gray-50 dark:bg-gray-900/50 p-4">
            <p class="text-xs font-bold uppercase tracking-widest text-gray-400 dark:text-gray-500 mb-2.5">{label}</p>
            <div class="flex flex-wrap gap-1.5">
              {items.map(item => (
                <span class="text-xs font-medium px-2.5 py-1 rounded-full bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 text-gray-700 dark:text-gray-300">
                  {item}
                </span>
              ))}
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- Section 4 — Integrations & Partners -->
    <section class="mb-12">
      <h2 class="text-lg font-bold text-gray-900 dark:text-white border-b border-gray-200 dark:border-gray-700 pb-1.5 mb-5 uppercase tracking-wide text-sm">
        Integrations & Partners
      </h2>
      <div class="flex flex-wrap gap-2">
        {integrations.map(name => (
          <span class="text-sm font-medium px-3.5 py-1.5 rounded-full bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 text-gray-700 dark:text-gray-300">
            {name}
          </span>
        ))}
      </div>
    </section>

  </div>
</Layout>
