---
import ThemeToggle from './ThemeToggle.astro';

const navLinks = [
  { href: '/',            label: 'Home' },
  { href: '/blog',        label: 'Blog' },
  { href: '/projects',    label: 'Projects' },
  { href: '/expertise',   label: 'Expertise' },
  { href: '/cv',          label: 'CV' },
  { href: '/photography', label: 'Photography' },
  { href: '/music',       label: 'Music' },
  { href: '/contact',     label: 'Contact' },
];

const currentPath = Astro.url.pathname;

function isActive(href: string) {
  if (href === '/') return currentPath === '/';
  return currentPath.startsWith(href);
}
---

<header class="sticky top-0 z-50 bg-white/80 dark:bg-gray-950/80 backdrop-blur-md border-b border-gray-200 dark:border-gray-800">
  <nav class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 h-16 flex items-center justify-between" aria-label="Main navigation">

    <!-- Wordmark -->
    <a href="/" class="font-semibold text-lg text-gray-900 dark:text-white hover:text-blue-600 dark:hover:text-blue-400 transition-colors">
      Robert McCaffrey
    </a>

    <!-- Desktop links -->
    <div class="hidden md:flex items-center gap-0.5">
      {navLinks.map(({ href, label }) => (
        <a
          href={href}
          class={`px-3 py-2 rounded-md text-sm font-medium transition-colors ${
            isActive(href)
              ? 'text-blue-600 dark:text-blue-400 bg-blue-50 dark:bg-blue-950'
              : 'text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white hover:bg-gray-100 dark:hover:bg-gray-800'
          }`}
          aria-current={isActive(href) ? 'page' : undefined}
        >
          {label}
        </a>
      ))}
      <div class="ml-2">
        <ThemeToggle />
      </div>
    </div>

    <!-- Mobile: theme toggle + hamburger -->
    <div class="flex items-center gap-1 md:hidden">
      <ThemeToggle />
      <button
        id="menu-toggle"
        class="p-2 rounded-md text-gray-600 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors"
        aria-label="Toggle navigation menu"
        aria-expanded="false"
        aria-controls="mobile-menu"
      >
        <svg id="icon-open" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
        <svg id="icon-close" class="w-6 h-6 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>
  </nav>

  <!-- Mobile menu -->
  <div id="mobile-menu" class="hidden md:hidden border-t border-gray-200 dark:border-gray-800" role="navigation" aria-label="Mobile navigation">
    <div class="px-4 py-3 space-y-1">
      {navLinks.map(({ href, label }) => (
        <a
          href={href}
          class={`block px-3 py-2 rounded-md text-sm font-medium transition-colors ${
            isActive(href)
              ? 'text-blue-600 dark:text-blue-400 bg-blue-50 dark:bg-blue-950'
              : 'text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white hover:bg-gray-100 dark:hover:bg-gray-800'
          }`}
          aria-current={isActive(href) ? 'page' : undefined}
        >
          {label}
        </a>
      ))}
    </div>
  </div>
</header>

<script>
  const toggle = document.getElementById('menu-toggle')!;
  const menu   = document.getElementById('mobile-menu')!;
  const iconOpen  = document.getElementById('icon-open')!;
  const iconClose = document.getElementById('icon-close')!;

  toggle.addEventListener('click', () => {
    const isOpen = !menu.classList.contains('hidden');
    menu.classList.toggle('hidden', isOpen);
    iconOpen.classList.toggle('hidden', !isOpen);
    iconClose.classList.toggle('hidden', isOpen);
    toggle.setAttribute('aria-expanded', String(!isOpen));
  });

  // Close on nav (useful on mobile after clicking a link)
  menu.querySelectorAll('a').forEach(a =>
    a.addEventListener('click', () => {
      menu.classList.add('hidden');
      iconOpen.classList.remove('hidden');
      iconClose.classList.add('hidden');
      toggle.setAttribute('aria-expanded', 'false');
    })
  );
</script>
